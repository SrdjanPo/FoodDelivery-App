<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/container1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:animateLayoutChanges="true"
        >
    <TextView
        android:id="@+id/orderItem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of the Food"
        android:textColor="#000"
        android:textSize="19sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/orderItem_price"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/orderItem_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="About the Food"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/orderItem_name"
        app:layout_constraintRight_toLeftOf="@id/orderItem_price"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/orderItem_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:text="120 дин"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="end|center" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>